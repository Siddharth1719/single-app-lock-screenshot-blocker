<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="2dp"
            android:background="@color/colorAppDefault"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:id="@+id/search_bar_parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/searchBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:background="#00000000"
                    android:hint="@string/search_account_app_bar_string"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/app_bar_close_icon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:src="@drawable/toolbar_ico_close_128x128"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/app_bar_custom_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/app_bar_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_marginStart="0dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Accounts"
                    android:textSize="20dp"
                    android:textStyle="bold" />

               <!-- <ImageView
                    android:id="@+id/app_bar_search_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="70dp"
                    android:src="@drawable/ic_search_black_24dp"
                    android:visibility="gone" />-->

                <ImageView
                    android:id="@+id/app_bar_list_sort_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:focusable="true" />

                <!--<ImageView
                    android:id="@+id/app_bar_list_reorder_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:focusable="true"
                    android:src="@drawable/toolbar_ico_check_128x128"
                    android:visibility="gone" />-->

               <!-- <ImageView
                    android:id="@+id/app_bar_list_restore_button"
                    android:layout_width="25dp"
